<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="现场服务"
            android:textColor="#000"
            />
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/site_device_s_1"
            layout="@layout/device_head"
            ></include>
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/site_device_s_2"
            layout="@layout/fix_layout_upsfix_body"
            ></include>
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/site_device_s_3"
            layout="@layout/fix_layout_upsfix_body"
            ></include>
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/site_device_s_4"
            layout="@layout/fix_layout_upsfix_body"
            ></include>
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/site_device_s_5"
            layout="@layout/fix_layout_upsfix_body"
            ></include>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaa"
            ></View>
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/site_device_s_6"
            layout="@layout/fix_cost"
            ></include>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="总结"
            android:textColor="#000"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/device_s_sum"
            android:textColor="#000"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaa"
            ></View>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/device_s_engineer_sign"
            android:text="工程师签名"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaa"
            ></View>
        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/device_s_custom_sign"
            android:text="提醒客户签名"
            android:visibility="gone"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaa"
            android:layout_gravity="left"
            android:layout_marginBottom="30dp"
            ></View>

    </LinearLayout>
</ScrollView>