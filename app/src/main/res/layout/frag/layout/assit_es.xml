<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="#ffffff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="电力子系统"
        android:textColor="#000"
        android:layout_weight="1"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/idc_num_ok"
        android:hint="给你的机房起个名把"
        android:layout_weight="1"
        />

</LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/es_head1"
        layout="@layout/head_layout"
        ></include>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/es_body1"
        layout="@layout/body_layout"
        ></include>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaa"
            ></View>
    <include
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/es_head2"
    layout="@layout/head_layout"
    ></include>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/es_body2"
        layout="@layout/body_layout"
        ></include>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaa"
            ></View>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/es_head3"
        layout="@layout/head_layout"
        ></include>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/es_body3"
        layout="@layout/body_layout"
        ></include>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaa"
            ></View>

