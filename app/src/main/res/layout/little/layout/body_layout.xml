<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#aaa"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="设备名称"
            android:textColor="#000"
            android:gravity="center"
            android:maxLines="3"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:id="@+id/ed_d_name"
            android:textColorHint="#AAA"
            android:textColor="#000"
            android:hint="如 迪特20kw精密空调"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="设备参数"
            android:textColor="#000"
            android:gravity="center"
            android:maxLines="3"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:id="@+id/ed_d_para"
            android:textColorHint="#AAA"
            android:textColor="#000"

            android:hint="如 220v/12A/2000Ω"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#aaa"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="设备型号"
            android:textColor="#000"
            android:gravity="center"
            android:maxLines="3"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:id="@+id/ed_d_type"
            android:textColorHint="#AAA"
            android:textColor="#000"

            android:hint="如 ups-micro-001"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="设备品牌"
            android:textColor="#000"
            android:gravity="center"
            android:maxLines="3"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:id="@+id/ed_d_brand"
            android:textColorHint="#AAA"
            android:textColor="#000"
            android:hint="如 迪特"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#aaa"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="设备数量"
            android:textColor="#000"
            android:gravity="center"
            android:maxLines="3"

            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:id="@+id/ed_d_num"
            android:textColorHint="#AAA"
            android:textColor="#000"
            android:hint="如 100"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="设备寿命/年"
            android:textColor="#000"
            android:gravity="center"
            android:maxLines="3"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:id="@+id/ed_d_alive"
            android:textColorHint="#AAA"
            android:textColor="#000"
            android:hint="如 12"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#aaa"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:text="使用起始时间"
            android:textColor="#000"
            android:gravity="center"
            android:maxLines="3"/>

        <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="年"
        android:textColor="#000"
        android:gravity="center"
        android:maxLines="3"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:id="@+id/ed_d_yyyy"
            android:textColorHint="#AAA"
            android:textColor="#000"
            android:hint="如 2008"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="月"
            android:textColor="#000"
            android:gravity="center"
            android:maxLines="3"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:id="@+id/ed_d_mm"
            android:textColorHint="#AAA"
            android:textColor="#000"
            android:hint="如 12"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="日"
            android:textColor="#000"
            android:gravity="center"
            android:maxLines="3"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:id="@+id/ed_d_dd"
            android:textColorHint="#AAA"
            android:textColor="#000"
            android:hint="如 28"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#aaa"
        ></View>

</LinearLayout>
