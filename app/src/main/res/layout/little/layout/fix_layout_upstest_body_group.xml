<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="电池组编号 例如1# 这个自己拼字符串"
            android:id="@+id/ups_body_h"
            android:textColor="#000"
            />
        <EditText
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="内阻"
            android:id="@+id/ups_group_ir"

            android:textColorHint="@color/hui"
            android:textColor="#000"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="放电电压"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="前电压 /v"
            android:id="@+id/ups_group_unchar_vol1"

            android:textColorHint="@color/hui"
            android:textColor="#000"
            />

        <EditText
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="中电压 /v"
            android:id="@+id/ups_group_unchar_vol2"

            android:textColorHint="@color/hui"
            android:textColor="#000"
            />
        <EditText
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="后电压 /v"
            android:id="@+id/ups_group_unchar_vol3"

            android:textColorHint="@color/hui"
            android:textColor="#000"
            />

    </LinearLayout>


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="充电电压"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="前电压 /v"
            android:id="@+id/ups_group_ec_vol1"

            android:textColorHint="@color/hui"
            android:textColor="#000"
            />

        <EditText
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="中电压 /v"
            android:id="@+id/ups_group_ec_vol2"

            android:textColorHint="@color/hui"
            android:textColor="#000"
            />
        <EditText
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="后电压 /v"
            android:id="@+id/ups_group_ec_vol3"

            android:textColorHint="@color/hui"
            android:textColor="#000"
            />

    </LinearLayout>

</LinearLayout>